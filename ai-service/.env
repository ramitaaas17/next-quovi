# ==================== ai-service/.env ====================
# Backend URL (para obtener restaurantes)
BACKEND_URL=http://backend:8080/api

# OpenWeatherMap API Key (opcional)
OPENWEATHER_API_KEY=

# Puerto del servicio - PUERTO 5050
PORT=5050

# Modo de desarrollo
ENVIRONMENT=development

# Configuración de modelos
MODEL_NAME=paraphrase-multilingual-MiniLM-L12-v2
CACHE_DIR=/app/cache

# Configuración de Recocido Simulado
SA_TEMPERATURA_INICIAL=100.0
SA_TEMPERATURA_MINIMA=0.1
SA_TASA_ENFRIAMIENTO=0.95
SA_MAX_ITERACIONES=500

# Pesos del sistema de scoring (suman 1.0)
PESO_CLIMA=0.25
PESO_OCASION=0.30
PESO_DISTANCIA=0.20
PESO_ANTOJO=0.15
PESO_PRESUPUESTO=0.10

# Configuración de embeddings
PESO_RELEVANCIA=0.6
PESO_DIVERSIDAD=0.4

# Logs
LOG_LEVEL=INFO